doctype 5
html
  head
    title Kinetech Performance Client Device
    meta(name="viewport", content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0")
    link(rel='stylesheet', href='/bower_components/normalize-css/normalize.css')
    link(rel='stylesheet', href='/stylesheets/client.css')
    script(src="/socket.io/socket.io.js")
    script(src="bower_components/jquery/jquery.min.js")
    script(src="bower_components/angular/angular.min.js")

  body
    div#wrapper(style="display:none")
      div#drawOptions
        div.colors
          div.colorBlock(data-color="#8158D9", style="background-color: #8158D9")
          div.colorBlock(data-color="#D958B1", style="background-color: #D958B1")
          div.colorBlock(data-color="#82F5E7", style="background-color: #82F5E7")
          div.colorBlock(data-color="#4B61F2", style="background-color: #4B61F2")
          div.colorBlock(data-color="#EB0C40", style="background-color: #EB0C40")
          div.colorBlock(data-color="#40DB2C", style="background-color: #40DB2C")
        form
          input(type="range", name="brushSize", id="brushSize", value="5", min="1", max="10")

    
    div#modelMask(style="display:none")
    div#modelWindow(style="display:none")
      h1
      p
      button(class="closeMsg") Close
      
    script(src="javascript/client.js")
