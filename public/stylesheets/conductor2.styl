// 2048Ã—1536 or 1024x768
widthFactor = 1
heightFactor = 1

html, body
  font -webkit-small-control
  height 100%
  width 100%
  margin 0
  padding 0
  background-color #000000

*
  outline: none

.container
  position: relative

header
  width 100%
  height (75 * heightFactor)px
  margin 0
  padding 0
  display inline-block

header h3
  font-size 40px
  color #fff;
  text-align center
  margin 0

div#specController
  display block
  width 320px
  margin 15px auto
  overflow hidden

  h2
    padding 0 20px 0 0
    font-size 40px
    text-align center
    margin 0
    color #fff
  
  header h3
    display inline-block
    margin 0 auto
    color white
  
  form
    display inline-block
    margin-top (30 * heightFactor)px
    margin-left 4px

    label
      color white
      display block
      font-size 10px

    input[type='range']
      color white
      -webkit-appearance none
      border-radius 10px
      background-color #000000
      border 1px solid #999
      width (240 * widthFactor)px
      padding 0 35px 0 35px
      height (40 * heightFactor)px
    
    input[type='range']::-webkit-slider-thumb
      width ( 35 * widthFactor)px
      height ( 35 * heightFactor)px

div#specOptionList
  margin 0 auto
  border 3px solid #999
  width (320 * widthFactor)px
  height (120 * heightFactor)px
  background-color #333333
  border-radius 15px
  

  button
    margin-top (18 * heightFactor)px
    padding 28px * heightFactor
    width (110 * widthFactor)px
    height (80 * heightFactor)px
    border-radius 15px
    border 2px solid #777
    margin-right 0px
    margin-left 23px
    background-color #000
    box-shadow 0px 4px 7px #000
    color #fff
    text-align center
    font-size .75em

  .toggled
    background-color #333

@media (orientation:landscape)
  header
    display none

  div#specController
    margin-bottom 15px

    div#optionBuilder
      padding 14px 0 14px 0
      width (410 * widthFactor)px
      margin 0 auto
      
      header h3
        display inline-block
        margin 0 auto
        color white
      
      form

        input[type='range']
          width (420 * widthFactor)px
