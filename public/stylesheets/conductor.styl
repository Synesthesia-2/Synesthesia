html, body
  height 100%
  width 100%
  margin 0
  padding 0
  background-color #000000

*
  outline: none

.container
  position: relative

header
  width 100%
  height 75px
  margin 0
  padding 0
  background-color #ED2143

header h1
  font-size 40px
  color #fff;
  text-align center
  margin 0
  padding-top 15px

div#specController
  width 100%
  margin-bottom 15px

  div#optionBuilder
    padding 14px 0 14px 0
    width 700px
    margin 0 auto

    h2
      padding 0 20px 0 0
      font-size 40px
      text-align center
      margin 0
      color #fff
    
    #optionPalette
      overflow hidden

    button
      border 3px solid #ddd
      border-radius 10px
      background-color #fff
      display inline-block
      height 120px

    button.color
      width 120px
      margin 10px 20px 15px 0

    button.random
      float right
      width 260px
      font-size 18px
      font-weight 800
      margin 10px 20px 15px 140px
    p
      padding-top 15px
      margin-top 30px
      float left
      font-size 25px
      color #fff
      letter-spacing: 1.5px
    
    form
      float right
      display inline-block
      margin-top 30px

      input[type='range']
        -webkit-appearance none
        border-radius 10px
        background-color #000000
        border 1px solid #999
        width 350px
        padding 0 35px 0 35px
        height 60px
      
      input[type='range']::-webkit-slider-thumb
        width: 65px
        height: 65px

div#specOptionList
  margin 0 auto
  border 3px solid #999
  width 700px
  height 120px
  background-color #333333
  border-radius 15px
  

  button
    margin-top 18px
    padding 10px
    width 146px
    height 80px
    border-radius 15px
    border 2px solid #777
    margin-right 0px
    margin-left 23px
    background-color #000
    box-shadow 0px 4px 7px #000
    color #fff
    text-align center

  .toggled
    background-color #333

@media (orientation:landscape)

  header
    display: none

