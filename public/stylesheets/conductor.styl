// 2048Ã—1536 or 1024x768
widthFactor = .667
heightFactor = .667

html, body
  font -webkit-small-control
  height 100%
  width 100%
  margin 0
  padding 0
  background-color #000000

*
  outline: none

.container
  position: relative

header
  width 100%
  height (75 * heightFactor)px
  margin 0
  padding 0
  background-color #ED2143

header h1
  font-size 40px
  color #fff;
  text-align center
  margin 0
  padding-top (15 * heightFactor)px

div#specController
  width 100%
  margin-bottom 15px

  div#optionBuilder
    padding 14px 0 14px 0
    width (700 * widthFactor)px
    margin 0 auto

    h2
      padding 0 20px 0 0
      font-size 40px
      text-align center
      margin 0
      color #fff
    
    #optionPalette
      overflow hidden

    button
      border 3px solid #ddd
      border-radius 10px
      background-color #fff
      display inline-block
      height (120 * heightFactor)px

    button.color
      width (120 * widthFactor)px
      margin 10px 20px 15px 0

    button.random
      width (570 * widthFactor)px
      font-size 18px
      font-weight 100
      margin 10px 20px 15px 0
    p
      padding-top (15 * heightFactor)px
      margin-top (30 * heightFactor)px
      float left
      font-size 25px
      color #fff
      letter-spacing: 1.5px
      text-align: center
    
    form
      display inline-block
      margin-top (30 * heightFactor)px
      margin-left 4px

      input[type='range']
        -webkit-appearance none
        border-radius 10px
        background-color #000000
        border 1px solid #999
        width (500 * widthFactor)px
        padding 0 35px 0 35px
        height (40 * heightFactor)px
      
      input[type='range']::-webkit-slider-thumb
        width ( 35 * widthFactor)px
        height ( 35 * heightFactor)px

div#specOptionList
  margin 0 auto
  border 3px solid #999
  width (700 * widthFactor)px
  height (120 * heightFactor)px
  background-color #333333
  border-radius 15px
  

  button
    margin-top (18 * heightFactor)px
    padding 10px * heightFactor
    width (100 * widthFactor)px
    height (80 * heightFactor)px
    border-radius 15px
    border 2px solid #777
    margin-right 0px
    margin-left 23px
    background-color #000
    box-shadow 0px 4px 7px #000
    color #fff
    text-align center
    font-size .8em

  .toggled
    background-color #333

@media (orientation:landscape)

  header
    display: none

